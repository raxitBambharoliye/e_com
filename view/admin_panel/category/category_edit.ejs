<%-include('../header')%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Edit Category</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">edit category</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- add admin  -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Edit Category</h3>
                            </div>
                            <!-- form start -->
                            <form action="/admin/category/edit" method="post" enctype="multipart/form-data">
                                <div class="card-body">
                                    <input type="hidden" value="<%= data.id %>" name="eid">
                                    <!-- category -->
                                    <div class="form-group">
                                        <label for="c_name">Category Name</label>
                                        <input type="text" name="category" class="form-control" id="c_name"
                                            placeholder="Enter Category Name" value="<%= data.category %>">
                                    </div>
                                    <!-- image -->
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="form-group">
                                                <label for="exampleInputFile">Profile</label>
                                                <div class="input-group">
                                                    <div class="custom-file">
                                                        <input type="file" name="category_image" class="custom-file-input"
                                                            id="exampleInputFile">
                                                        <label class="custom-file-label" for="exampleInputFile">Add Category
                                                            Image</label>
                                                    </div>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text">Upload</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <img src="<%= data.category_image %>" height="100" width="100" alt="">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Edit</button>
                                </div>
                            </form>
                            <!-- form end -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%-include('../footer')%>