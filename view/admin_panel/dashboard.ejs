<%-include('header')%>
  <div class="content-wrapper">
    <!-- Page header -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Dashboard</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- head box -->
        <div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h3>
                  <%=order_data%>
                </h3>

                <p>New Orders</p>
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a href="/admin/order_view" class="small-box-footer">More info <i
                  class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                <h3>
                  <%= amount %><sup style="font-size: 20px">â‚¹</sup>
                </h3>
                <p>total amount </p>
              </div>
              <div class="icon">
                <i class="fa-solid fa-money-bills"></i>
              </div>
              <a href="" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h3>
                  <%= user_data %>
                </h3>

                <p>User Registrations</p>
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              <a href="/admin/user_view" class="small-box-footer">More info <i
                  class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h3>
                  <%=product_data%>
                </h3>

                <p>total product</p>
              </div>
              <div class="icon">
                <i class="ion ion-pie-graph"></i>
              </div>
              <a href="/admin/product/view" class="small-box-footer">More info <i
                  class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
        </div>
        <!-- /Head Box -->
        <!-- Chart -->
        <div class="row">
          <!-- Left col -->
          <section class="col-lg-7 connectedSortable">
            <!-- Custom tabs (Charts with tabs)-->
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">
                  <i class="fas fa-chart-pie mr-1"></i>
                  Sales
                </h3>
                <div class="card-tools">
                  <ul class="nav nav-pills ml-auto">
                    <li class="nav-item">
                      <a class="nav-link active" href="#chart_1" data-toggle="tab">Line</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#sales-chart" data-toggle="tab">Area</a>
                    </li>
                  </ul>
                </div>
              </div><!-- /.card-header -->
              <div class="card-body">
                <div class="tab-content p-0">
                  <!-- Morris chart - Sales -->
                  <div class="chart tab-pane active" id="chart_1" style="position: relative; height: 300px;">
                    <div id="sales_chart" height="300" style="height: 300px;"></div>
                  </div>
                  <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 300px;">
                    <div id="sales_chart_2" height="300" style="height: 300px;"></div>
                  </div>
                </div>
              </div><!-- /.card-body -->
            </div>
          </section>
          <!-- /.Left col -->
          <!-- right col (We are only adding the ID to make the widgets sortable)-->
          <section class="col-lg-5 connectedSortable">
            <!-- solid sales graph -->
            <div class="card bg-warning" >
              <div class="card-header border-0">
                <h3 class="card-title">
                  <i class="fa-solid fa-user"></i>
                  Users Graph
                </h3>

                <div class="card-tools">
                  <button type="button" class="btn bg-warning btn-sm" data-card-widget="collapse" style="background-color:#d8a305!important ;">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn bg-warning btn-sm" data-card-widget="remove" style="background-color:#d8a305!important ;">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <div class="card-body">
                <div class="chart" id="user_chart"
                  style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></div>
              </div>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </section>
    <!-- right col -->
  </div>
  <!-- /Chart -->
  </div>
  </section>
  <!-- /.content -->
  </div>

  <%-include('footer')%>
    <script>
      var keys = "<%=sales_keys%>";
      var keys_array = keys.split(",");

      var values = "<%=sales_values%>";
      var values_array = values.split(",");
      var options = {
        chart: {
          type: 'line',
          height: 300
        },
        series: [{
          name: 'sales',
          data: values_array
        }],
        xaxis: {

          categories: keys_array
        }
      }

      var chart = new ApexCharts(document.querySelector("#sales_chart"), options);

      chart.render();

    </script>
    <script>
      var keys = "<%=sales_keys%>";
      var keys_array = keys.split(",");

      var values = "<%=sales_values%>";
      var values_array = values.split(",");
      var options = {
        chart: {
          type: 'area',
          height: 300
        },
        series: [{
          name: 'sales',
          data: values_array
        }],
        xaxis: {

          categories: keys_array
        }
      }

      var chart = new ApexCharts(document.querySelector("#sales_chart_2"), options);

      chart.render();

    </script>
    <script>
      var keys = "<%=user_keys%>";
      console.log(keys);
      var keys_array = keys.split(",");

      var values = "<%=user_values%>";
      console.log(values);
      var values_array = values.split(",");
      var options = {
        chart: {
