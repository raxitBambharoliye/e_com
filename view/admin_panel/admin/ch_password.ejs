<%-include('../header')%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Change Password</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">change password</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- add admin  -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Add Admin</h3>
                            </div>
                            <!-- form start -->
                            <form action="/admin/ch_pass" method="post" >
                                <div class="card-body">
                                    <!-- old_password -->
                                    <div class="form-group">
                                        <label for="old_password">Old Password</label>
                                        <input type="text" name="old_password" class="form-control" id="old_password"
                                            placeholder="Enter Old Password ...">
                                    </div>
                                    <!-- New_password -->
                                    <div class="form-group">
                                        <label for="n_password">New Password</label>
                                        <input type="text" name="n_password" class="form-control" id="l_name"
                                            placeholder="Enter New Password...">
                                    </div>
                                    <!-- conform_password -->
                                    <div class="form-group">
                                      <label for="c_password">New Password</label>
                                      <input type="text" name="c_password" class="form-control" id="c_password"
                                          placeholder="Enter Conform Password ...">
                                  </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Change</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- form end -->
                </div>
            </div>
    </div>
    </div>
    </section>
    </div>

    <%-include('../footer')%>