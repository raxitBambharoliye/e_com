<%-include('../header')%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Add Extra Category</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">add extra category</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- add admin  -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">add extra category</h3>
                            </div>
                            <!-- form start -->
                            <form action="/admin/ex_category/add" method="post">
                                <div class="card-body">

                                    <!-- category -->
                                    <div class="form-group">
                                        <label>Select Category</label>
                                        <select class="form-control" name="cat_id" id="category" onchange="get_sub()">
                                            <option> --select category--</option>
                                            <% category.forEach(element=> { %>
                                                <option value="<%= element.id  %>">
                                                    <%= element.category %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                    <!-- sub category -->
                                    <div class="form-group">
                                        <label>Select Subcategory</label>
                                        <select class="form-control" name="sub_id" id="sub_id">
                                            <option> --select subcategory--</option>
                                        </select>
                                    </div>
                                    <!-- extra category -->
                                    <div class="form-group">
                                        <label for="c_name">Extra Category Name</label>
                                        <input type="text" name="extra_category" class="form-control" id="sub_category"
                                            placeholder="Enter Extra Category Name">
                                    </div>
                                    <!-- size -->
                                    <div class="form-group">
                                        <label>Size's</label>
                                        <textarea class="form-control" name="size" rows="3"
                                            placeholder="Enter Size : L,XL,S,M / 250g,500g,1Kg / 250ml,500ml,1l"></textarea>
                                    </div>
                                    <!-- color -->
                                    <div class="form-group">
                                        <label>Color's</label>
                                        <textarea class="form-control" name="color" rows="3"
                                            placeholder="Enter Color Name : red,blue,green "></textarea>
                                    </div>
                                </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                        </form>
                        <!-- form end -->
                    </div>
                </div>
            </div>
    </div>
    </section>
    </div>

    <%-include('../footer')%>