<%- include('user_header') %>


    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Shop Detail</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Shop Detail</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Shop Detail Start -->
    <form action="/add_cart" method="post">
        <div class="container-fluid py-5">
            <div class="row px-xl-5 align-items-center">
                <!-- slider -->
                <div class="col-lg-5 pb-5">
                    <div id="product-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner border">
                            <div class="carousel-item active">
                                <img class="" src="<%= data.image %>" height="600px" width="560px"
                                    style="object-fit: cover;" alt="Image">
                            </div>
                            <% for(var i=0 ;i< data.mul_image.length;i++){ %>
                                <div class="carousel-item ">
                                    <img class="" src="<%= data.mul_image[i] %>" height="600px" width="560px"
                                        style="object-fit: cover;" alt="Image">
                                </div>
                                <% } %>
                        </div>
                        <!-- button -->
                        <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                            <i class="fa fa-2x fa-angle-left text-dark"></i>
                        </a>
                        <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                            <i class="fa fa-2x fa-angle-right text-dark"></i>
                        </a>
                    </div>
                </div>
                <!-- detail -->
                <div class="col-lg-7 pb-5">
                    <h3 class="font-weight-semi-bold"><%= data.name %></h3>
                    <!-- rating -->
                    <div class="d-flex mb-3">
                        <div class="text-primary mr-2">

                            <% if(rating> 1 && rating <1.5 ) {%>
                                    <small class="fas fa-star"></small>
                                    <small class="far fa-star"></small>
                                    <small class="far fa-star"></small>
                                    <small class="far fa-star"></small>
                                    <small class="far fa-star"></small>
                                    <% } else if(rating> 1.5 && rating <2) {%>
                                            <small class="fas fa-star"></small>
                                            <small class="fas fa-star-half-alt"></small>
                                            <small class="far fa-star"></small>
                                            <small class="far fa-star"></small>
                                            <small class="far fa-star"></small>
                                            <% } else if(rating> 2&& rating <2.5) {%>
                                                    <small class="fas fa-star"></small>
                                                    <small class="fas fa-star"></small>
                                                    <small class="far fa-star"></small>
                                                    <small class="far fa-star"></small>
                                                    <small class="far fa-star"></small>
                                                    <% }else if(rating> 2.5&& rating <3) {%>
                                                            <small class="fas fa-star"></small>
                                                            <small class="fas fa-star"></small>
                                                            <small class="fas fa-star-half-alt"></small>
                                                            <small class="far fa-star"></small>
                                                            <small class="far fa-star"></small>
                                                            <% } else if(rating>3&& rating <3.5) {%>
                                                                    <small class="fas fa-star"></small>
                                                                    <small class="fas fa-star"></small>
                                                                    <small class="fas fa-star"></small>
                                                                    <small class="far fa-star"></small>
                                                                    <small class="far fa-star"></small>
                                                                    <% }else if(rating> 3.5&& rating <4) {%>
                                                                            <small class="fas fa-star"></small>
                                                                            <small class="fas fa-star"></small>
                                                                            <small class="fas fa-star"></small>
                                                                            <small class="fas fa-star-half-alt"></small>
                                                                            <small class="far fa-star"></small>
                                                                            <% }else if(rating> 4&& rating <4.5) {%>
                                                                                    <small class="fas fa-star"></small>
                                                                                    <small class="fas fa-star"></small>
                                                                                    <small class="fas fa-star"></small>
                                                                                    <small class="fas fa-star"></small>
                                                                                    <small class="far fa-star"></small>
                                                                                    <% }else if(rating> 4.5&& rating <5)
                                                                                            {%>
                                                                                            <small
                                                                                                class="fas fa-star"></small>
                                                                                            <small
                                                                                                class="fas fa-star"></small>
                                                                                            <small
                                                                                                class="fas fa-star"></small>
                                                                                            <small
                                                                                                class="fas fa-star"></small>
                                                                                            <small
                                                                                                class="fas fa-star-half-alt"></small>
                                                                                            <% }else if(rating=5) {%>
                                                                                                <small
                                                                                                    class="fas fa-star"></small>
                                                                                                <small
                                                                                                    class="fas fa-star"></small>
                                                                                                <small
                                                                                                    class="fas fa-star"></small>
                                                                                                <small
                                                                                                    class="fas fa-star"></small>
                                                                                                <small
                                                                                                    class="fas fa-star"></small>
                                                                                                <% } %>
                        </div>
                        <small class="pt-1">(<%= review_count %> Reviews)</small>
                    </div>
                    <h3 class="font-weight-semi-bold mb-4">₹ <%= data.price %>
                    </h3>
                    <p class="mb-4">
                        <%= data.description %>
                    </p>
                    <div class="d-flex mb-3">
                        <input type="hidden" name="product_id" value="<%= data.id %>">
                        <p class="text-dark font-weight-medium mb-0 mr-3">Sizes:</p>
                        <!-- size -->
                        <% for(var i=0 ; i< data.size.length ; i++){ %>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" value="<%= data.size[i] %>"
                                    id="size<%= i %>" name="size">
                                <label class="custom-control-label" for="size<%= i %>">
                                    <%= data.size[i] %>
                                </label>
                            </div>
                            <% } %>
                    </div>
                    <div class="d-flex mb-4">
                        <p class="text-dark font-weight-medium mb-0 mr-3">Colors:</p>
                        <!-- size -->
                        <% for(var i=0 ; i< data.color.length ; i++){ %>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" value="<%= data.color[i] %>"
                                    id="color<%= i %>" name="color">
                                <label class="custom-control-label" for="color<%= i %>">
                                    <%= data.color[i] %>
                                </label>
                            </div>
                            <% } %>
                    </div>
                    <!-- content -->
                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div class="input-group quantity mr-3" style="width: 130px;">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-minus">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" name="quantity" class="form-control bg-secondary text-center" value="1">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-plus">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <% if(locals.user){ %>
                            <button class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Add To
                                Cart</button>
                            <% }else{ %>
                                <a class="btn btn-primary px-3" data-bs-toggle="modal" data-bs-target="#login"><i
                                        class="fa fa-shopping-cart mr-1"></i> Add To
                                    Cart</a>
                                <% } %>
                    </div>
    </form>
    <!-- icons -->
    <div class="d-flex pt-2">
        <p class="text-dark font-weight-medium mb-0 mr-2">Share on:</p>
        <div class="d-inline-flex">
            <a class="text-dark px-2" href="">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a class="text-dark px-2" href="">
                <i class="fab fa-twitter"></i>
            </a>
            <a class="text-dark px-2" href="">
                <i class="fab fa-linkedin-in"></i>
            </a>
            <a class="text-dark px-2" href="">
                <i class="fab fa-pinterest"></i>
            </a>
        </div>
    </div>
    </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                <a class="nav-item nav-link active" data-toggle="tab" href="#tab-pane-1">Description</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-3">Reviews (<%= review_count %>)</a>
            </div>
            <div class="tab-content">
                <!-- description -->
                <div class="tab-pane fade show active" id="tab-pane-1">
                    <h4 class="mb-3">Product Description</h4>
                    <p>
                        <%= data.description %>
                    </p>
                </div>
                <!-- review -->
                <div class="tab-pane fade" id="tab-pane-3">
                    <div class="row">
                        <!-- watch reviews -->
                        <div class="col-md-6">
                            <h4 class="mb-4">
                                <%= data.name %>
                            </h4>
                            <% for (const rev of review) { %>
                                <div class="media mb-4">
                                    <div class="media-body">
                                        <% var date=rev.createAt.slice(0,9) %>
                                            <h6>
                                                <%= rev.name %><small> - <i>
                                                            <%= date %>
                                                        </i></small>
                                            </h6>
                                            <div class="text-primary mb-2">
                                                <% if(rev.rating==1) {%>
                                                    <i class="fas fa-star"></i>
                                                    <i class="far fa-star"></i>
                                                    <i class="far fa-star"></i>
                                                    <i class="far fa-star"></i>
                                                    <i class="far fa-star"></i>
                                                    <% }else if(rev.rating==2){ %>
                                                        <i class="fas fa-star"></i>
                                                        <i class="fas fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <i class="far fa-star"></i>
                                                        <% }else if(rev.rating==3){ %>
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star"></i>
                                                            <i class="far fa-star"></i>
                                                            <i class="far fa-star"></i>
                                                            <% }else if(rev.rating==4){ %>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="far fa-star"></i>
                                                                <% }else if(rev.rating==5){ %>
                                                                    <i class="fas fa-star"></i>
                                                                    <i class="fas fa-star"></i>
                                                                    <i class="fas fa-star"></i>
                                                                    <i class="fas fa-star"></i>
                                                                    <i class="fas fa-star"></i>
                                                                    <% } %>
                                            </div>
                                            <p>Diam amet duo labore stet elitr ea clita ipsum, tempor labore accusam
                                                ipsum
                                                et no at. Kasd diam tempor rebum magna dolores sed sed eirmod ipsum.</p>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <!-- add reviews -->
                        <div class="col-md-6">
                            <form method="post" action="/add_review">
                                <input type="hidden" name="product_id" value="<%= data.id %>">
                                <h4 class="mb-4">Leave a review</h4>
                                <small>Your email address will not be published. Required fields are marked
                                    *</small>
                                <!-- review rating star -->
                                <div class="d-flex my-3">
                                    <p class="mb-0 mr-2">Your Rating * :</p>
                                    <div class="rating">
                                        <input type="radio" name="rating" value="5" id="rating-5">
                                        <label for="rating-5"><i class="far fa-star"></i></label>
                                        <input type="radio" name="rating" value="4" id="rating-4">
                                        <label for="rating-4"><i class="far fa-star"></i></label>
                                        <input type="radio" name="rating" value="3" id="rating-3">
                                        <label for="rating-3"><i class="far fa-star"></i></label>
                                        <input type="radio" name="rating" value="2" id="rating-2">
                                        <label for="rating-2" class=""><i class="far fa-star"></i></label>
                                        <input type="radio" name="rating" value="1" id="rating-1">
                                        <label for="rating-1"><i class="far fa-star"></i></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="message">Your Review *</label>
                                    <textarea id="message" cols="30" rows="5" name="review"
                                        class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="name">Your Name *</label>
                                    <input type="text" class="form-control" name="name" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Your Email *</label>
                                    <input type="email" class="form-control" name="email" id="email">
                                </div>
                                <div class="form-group mb-0">
                                    <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Shop Detail End -->


    <!-- Products Start -->
    <div class="container-fluid py-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">You May Also Like</span></h2>
        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="owl-carousel related-carousel">
                    <% for (const su of sug) {%>
                        <div class="card product-item border-0">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0"
                                style="width: 300px;height: 300px;">
                                <img class="img-fluid w-100" src="<%= su.image %>" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">
                                    <%= su.name %>
                                </h6>
                                <div class="d-flex justify-content-center">
                                    <h6>₹<%= su.price %>
                                    </h6>
                                    <h6 class="text-muted ml-2"><del>₹<%= su.old_price %></del></h6>
                                </div>
                            </div>
                            <form method="post" action="/add_cart">
                                <div class="card-footer d-flex justify-content-between bg-light border">
                                    <!-- add static deatile -->
                                    <input type="hidden" name="product_id" value="<%=su.id%>">
                                    <input type="hidden" name="size" value="<%= su.size[0] %>">
                                    <input type="hidden" name="color" value="<%= su.color[0] %>">
                                    <input type="hidden" name="quantity" value="1">
                                    <a href="/single_product/<%= su.id %>" class="btn btn-sm text-dark p-0"><i
                                            class="fas fa-eye text-primary mr-1"></i>View
                                        Detail</a>
                                    <% if(locals.user){ %>
                                        <input type="submit" class="btn btn-sm text-dark p-0"><i
                                            class="fa fa-shopping-cart mr-1"></i> Add To
                                        Cart</input>
                                        <% }else{ %>
                                            <a class="btn btn-sm text-dark p-0" data-bs-toggle="modal"
                                                data-bs-target="#login"><i class="fa fa-shopping-cart mr-1"></i> Add To
                                                Cart</a>
                                            <% } %>
                                </div>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- Products End -->



    <%- include('user_footer') %>