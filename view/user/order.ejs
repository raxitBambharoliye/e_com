<%- include('user_header') %>
    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Your Orders</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Your Orders</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Cart Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <%var i=0; for (const or of data) {%>
                <div class="col-lg-12 table-responsive mb-5">
                    <div class="order_item">
                        <div class="row align-items-center">
                            <div class="col-md-1">
                                <img class="image-flude" src="<%= or.product_id.image %>" alt="" width="100px"
                                    height="100px">
                            </div>
                            <div class="col-md-8">
                                <div class="order_content">
                                    <h5>
                                        <%= or.product_id.name %>
                                    </h5>
                                    <p>
                                        qty: <%= or.cart_id.quantity %> | price: <%= or.product_id.price %> â‚¹ | ordered
                                                on: <%= or.createAt %>
                                    </p>
                                    <a href="/cancel_ord/<%= or.id %>">Cancel Order</a>
                                    <a href="" data-bs-toggle="modal" data-bs-target="#Order_detail<%= i %>">Order Detail</a>
                                    <!-- log_in model -->
                                    <div class="modal  fade" id="Order_detail<%= i %>" data-bs-backdrop="static"
                                        data-bs-keyboard="false" tabindex="1" aria-labelledby="staticBackdropLabel"
                                        aria-hidden="true">
                                        <div class="modal-dialog modal-xl modal-dialog-centered  ">
                                            <div class="modal-content p-3">
                                                <div class="modal-header ">
                                                    <div class="title">
                                                        <h2 class="modal-title fs-5" id="staticBackdropLabel">Order
                                                            Detail</h2>
                                                        <p style="display: block; width: 100%;">Order id : <%= or.id %>
                                                        </p>
                                                    </div>
                                                    <button type="button" class="btn" data-bs-dismiss="modal"
                                                        aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
                                                </div>
                                                <div class="modal-body" >
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <div class="shipping_address">
                                                                <h4>Shipping Address</h4>
                                                                <ul style=" padding-left: 20px;">
                                                                    <li>address: <%= or.address_id.address %>
                                                                    </li>
                                                                    <li>city/village: <%= or.address_id.village %>
                                                                    </li>
                                                                    <li>city: <%= or.address_id.city %>
                                                                    </li>
                                                                    <li>State: <%= or.address_id.state %>
                                                                    </li>
                                                                    <li>country: <%= or.address_id.country %>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="payment_method">
                                                                <h4>Payment Method</h4>
                                                                <ul style="padding: 0;">
                                                                    <li>Method : card </li>
                                                                    <li>Card Number: <%= or.pay_id.card_num %>
                                                                    </li>
                                                                    <li>Payment Id: <%= or.pay_id.id %>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6" >
                                                            <h4>Product Details</h4>
                                                             <div class="d-flex align-items-center justify-content-between">
                                                                       <div class="" style="height: 50px; width: 60px; margin-right: 5px;" >
                                                                        <img
                                                                        src="<%= or.product_id.image %>"    style="height: 100%; width: 100%;" alt="" >
                                                                       </div>
                                                                        <h6 ><%= or.product_id.name %></h6>
                                                                    </div>
                                                            <ul style="padding-left: 60px;">
                                                                <li>Price: <%= or.product_id.price %></li>
                                                                <li>quantity: <%= or.cart_id.quantity %></li>
                                                                <li>Color: <%= or.cart_id.color %></li>
                                                                <li>Size: <%= or.cart_id.size %></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- /log_id model -->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <% i++; } %>
            <% if (!data.length) { %>
                <div class="col-12">
                    <p style="text-align: center;">No Order Found</p>
                </div>
            <% } %>
        </div>
    </div>
    <!-- Cart End -->
    <%- include('user_footer') %>